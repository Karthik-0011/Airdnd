@model List<Reservation>
@{ 
    ViewData["Title"] = "My Reservations"; 
}

<h2 class="text-center">My Reservations</h2>

@if (Model.Count == 0) 
{ 
    <p class="text-center">You have no reservations.</p> 
}
else
{
    <table class="table">
        <thead>
        <tr><th>Residence</th><th>Check-in</th><th>Check-out</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var res in Model)
            {
                <tr>
                    <td>@(res.Residence?.Name ?? "N/A")</td><td>@res.ReservationStartDate.ToShortDateString()</td><td>@res.ReservationEndDate.ToShortDateString()</td>
                    <td><form asp-action="Cancel" method="post"><input type="hidden" name="id" value="@res.ReservationId" /><button type="submit" class="btn btn-danger">Cancel</button></form></td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="text-center mt-3">
    <a asp-controller="Home" asp-action="Index" asp-route-SelectedLocation="@ViewBag.Location" asp-route-SelectedDates="@ViewBag.Dates" asp-route-SelectedGuests="@ViewBag.Guests" class="btn btn-primary">Back to Home</a>
</div>
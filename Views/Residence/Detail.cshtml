@model Residence
@{
    ViewData["Title"] = "Residence Details";
}

<div class="row">
    <div class="col-md-8">
        <img src="~/images/@Model.ResidencePicture" class="img-fluid" alt="@Model.Name" />
    </div>
    <div class="col-md-4">
        <h2>@Model.Name</h2>
        <h4>@Model.Location.Name</h4>
        
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Guests: @Model.GuestNumber</li>
            <li class="list-group-item">Bedrooms: @Model.BedroomNumber</li>
            <li class="list-group-item">Bathrooms: @Model.BathroomNumber</li>
            <li class="list-group-item"><b>$@Model.PricePerNight.ToString("F2") / night</b></li>
        </ul>
        
        <div class="mt-3">
            <a asp-action="Index" 
               asp-route-SelectedLocation="@ViewBag.Location"
               asp-route-SelectedDates="@ViewBag.Dates"
               asp-route-SelectedGuests="@ViewBag.Guests"
               class="btn btn-secondary">Back to Home</a>

            <form asp-controller="Reservation" asp-action="Reserve" method="post" class="d-inline">
                <input type="hidden" name="residenceId" value="@Model.ResidenceId" />
                
                <input type="hidden" name="selectedDates" value="@ViewBag.Dates" />

                <button type="submit" class="btn btn-primary">Reserve</button>
            </form>
        </div>
    </div>
</div>